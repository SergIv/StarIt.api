{% extends '::base.html.twig' %}
{% block title %}
    Feedback
{% endblock %}

{% block body %}
    {% block stylesheets %}
        {{ parent() }}
        {% stylesheets "@CodyInterfaceBundle/Resources/public/css/*" filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
    
    {% block javascripts %}
        {{ parent() }}
        {% javascripts '@CodyInterfaceBundle/Resources/public/js/*' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
    <div class="container">

    <div class="centered form-width">
    {{ form_start(form, {'action': path('cody_interface_feedback')}) }}
        {{ form_errors(form) }}
        
            <div id="chain-row" class="form-group  select-width centered">
            {{ form_row(form.chain, {'attr': {'class': 'form-control' }}) }}
            <span class="help-block">Подсказки</span>
            </div>
            
            <div id="point" class="form-group  select-width centered" data-path = " {{ path('_ajax_action') }} " >
                {{ form_row(form.point, {'attr': {'class': 'form-control'}})  }} 
            </div>
            <div class="form-group  select-width centered">
            {{ form_row(form.rating, {'attr': {'class': 'rating form-control', 'data-max' : 5, 'data-min' : 1 }}) }}
            </div>
            
            <div class="form-group  select-width centered">
            {{ form_row(form.comment, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group  select-width centered">
            {{ form_widget(form.save, { 'label': 'Оценить' }) }}
            </div>
            
            

        {{ form_widget(form._token) }}
        
    {{ form_end(form) }}
    </div>
    </div>
{% endblock %}

